@model IEnumerable<TheResistance.Models.Post>

@{
    ViewBag.Title = "Index";
}


<div class="blogcreatewrapper">
    <div class="divfortable">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th class="maxwidth">
                    @Html.DisplayNameFor(model => model.Body)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.DateCreated)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="verticalalign">
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td class="verticalalign maxwidth">
                        @Html.DisplayFor(modelItem => item.Body)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.DateCreated)
                    </td>

                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID })<br />
                        @Html.ActionLink("Details", "Details", new { id = item.ID })<br />
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })<br />
                    </td>

                </tr>
            }

        </table>
    </div>

    <div class="divforactionlinkindex">
        <p class="createnewlink">
            @Html.ActionLink("Create New", "Create","", new { @class = "buttonsingle" })
        </p>
    </div>


</div>